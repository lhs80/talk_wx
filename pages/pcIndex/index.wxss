page{
  background-color: rgb(255, 255, 255);
}
.login{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  /*background:url("../../images/endMeetting.png") no-repeat top left;*/
  /*background-size: cover;*/
}
.background{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: -1;
}
.login_from{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width: 400px;
  height: 100vh;
}
.logo{
  width: 100%;
  height: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 10%;
}
.logoImg{
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
.title{
  width: 100%;
  height: calc(100% - 80px);
  text-align: center;
  font-size: 20px;
  font-weight: 600;
  margin-top: 5px;
}
.form{
  width: 100%;
  height: 60%;
}
.id,.name{
  width: 100%;
  margin-top: 10px;
}
label>text{
  color: red;
}
label{
  display: inline-block;
  width: 100%;
  font-family: SourceHanSansCN-Medium, SourceHanSansCN;
  font-weight: 600;
  margin-bottom: 17px;
}
.login_input{
  width: 100%;
  height: 40px;
  padding-left: 10px;
  border-radius: 4px;
  background-color: #FFF;
}
.warn_msg{
  width: 100%;
  font-size: 12px;
  font-weight: 400;
  color: #757575;
  margin-top: 20px;
}
.submitBtn{
  width: 100%;
  height: 48px;
  background-color: #148AFE;
  box-shadow: 0px 3px 7px 0px #A5CBFA;
  border-radius: 30px;
  color: #FFF;
  line-height: 48px;
}
.copy{
  display: none;
  width: 100%;
  text-align: center;
  font-size: 14px;
  font-weight: 400;
  color: #666666;
  position: absolute;
  bottom: 23px;
}
/* 适应宽度 */
@media screen and (max-width: 972px) and (min-width: 587px){
  .submitBtn {
    margin-top: 5%;
   }
 }
 @media screen and (min-width: 1920px){
  .submitBtn {
    margin-top: 20%;
   }
   .login_from{
      width: 600px;
    }
    .title{
      font-size: 30px;
    }
    .name{
      margin-top: 20px;
    }
    .copy{
      display: block;
    }
 }
 /*适应高度*/
@media screen and (min-height: 560px) and (max-height: 900px){
  .submitBtn {
    margin-top: 0;
  }
  .copy{
    display: block;
  }
}
@media screen and (min-height: 414px) and (max-height: 500px){
  .logo{
    margin-top: 3%;
  }
}
