page {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.meeting {
  width: 100vw;
  height: calc(100vh - env(safe-area-inset-bottom));
  background-color: #F2F3F5;
}

.navTitle {
  width: 100%;
  height: 48px !important;
  padding-top: 40px !important;
  background-color: #FAFAFA !important;
}

.endMeeting {
  width: 40rpx;
  height: 40rpx;
}

.videoSwiper {
  width: calc(100% - 32px);
  /* height: calc(100% - 10vh - 98rpx); */
  height: calc(100% - 88px - 49px - 24px);
  margin: 10px 16px 8px 16px;
}

.homeScreen {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background:black;
  z-index:11;
}

.emceeName {
  display: block;
  position: absolute;
  max-width: auto;
  max-width: 200rpx;
  min-width: 104rpx;
  text-align: center;
  border-radius: 10rpx;
  bottom: 0;
  margin: 0 0 12rpx 12rpx;
  font-size: 22rpx;
  padding: 5rpx;
  background-color: #3A5579;
}

.emceeLoading {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #F5E3D2;
}

.emceeLoadingText {
  width: 100%;
  display: block;
  text-align: center;
  position: absolute;
  /* z-index: 26; */
  top: 84%;
  color: #051C33;
  font-size: 28rpx;
}

.viceScreen {
  position: absolute;
  top: 36rpx;
  right: 20rpx;
  width: 200rpx;
  height: 300rpx;
  box-shadow: 0px 0px 2px 0px rgba(230, 230, 230, 0.5);
  border-radius: 6px;
  z-index: 11;
}
.viceScreen .userName{
   position: absolute;
   display: block;
   bottom: 0;
   max-width: 120rpx;
   min-width: 104rpx;
   height: 30rpx;
   background-color: #e3dfe2cc;
   border-radius: 10rpx;
   text-align: center;
   font-size: 22rpx;
   padding: 5rpx;
   margin: 0 0 8rpx 6rpx;
}

.userName {
  display: block;
  /* position: absolute; */
  bottom: 0;
  max-width: 120rpx;
  min-width: 104rpx;
  height: 30rpx;
  background-color: #e3dfe2cc;
  border-radius: 10rpx;
  text-align: center;
  font-size: 22rpx;
  padding: 5rpx;
  margin: 0 0 8rpx 6rpx;
}

.otherScreen {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}

.otherScreenList {
  width: calc(50% - 4px);
  height: calc(50% - 4px);
}

.otherScreenList:nth-child(2),
.otherScreenList:nth-child(4) {
  margin-left: 8px;
}

.otherScreenList:nth-child(3),
.otherScreenList:nth-child(4) {
  margin-top: 8px;
}

.otherUserList {
  display: flex; 
  flex-direction: column;
  position: relative;
  width: 100%;
  height: 100%;
  background:black;
}

.menuList {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 98rpx;
  padding-bottom: 10rpx;
  background-color: #FFF;
}

.menuItem {
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex-wrap: wrap;
  color: #2E3033;
}

.icon-liaotian {
  position: relative;
}

.chatNum {
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 28rpx;
  text-align: center;
  left: 44rpx;
  border-radius: 50%;
  background-color: #E62C12;
}

.menuItem>.iconfont {
  display: block;
  font-size: 68rpx;
}

.menuItem>text {
  display: block;
  width: 100%;
  font-size: 20rpx;
}

.hoverTip {
  position: absolute;
  width: 400rpx;
  /* height: 108rpx; */
  bottom: calc(100% + 20rpx);
  border-radius: 10rpx;
  z-index: 9;
  background-color: rgba(51, 51, 51, 0.8);
}

