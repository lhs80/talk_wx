.closeMsg {
  width: 24rpx;
  height: 24rpx;
  margin: 2px 4px 0 0;
  color: #CCCCCC;
}

.more {
  position: absolute;
  bottom: 100%;
  width: 100%;
  height: 240rpx;
  z-index: 8;
  border-radius: 10px 10px 0px 0px;
  background-color: rgb(255, 255, 255);
}

.moreList {
  display: flex;
  margin-top: 40rpx;
}

.moreList>view>image {
  width: 68rpx;
  height: 68rpx;
  padding-bottom: 14rpx;
}

.chatBody {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* height: 1204rpx; */
  height: 70%;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.97);
  box-shadow: 0px 0px 4px 0px rgba(213, 213, 213, 0.8);
  border-radius: 10px 10px 0px 0px;
}

.chatBodyTitle {
  height: 68rpx;
}

.chatMsgBody {
  /* display: flex;
  justify-content: center;
  flex-wrap: wrap; */
  width: 700rpx;
  margin: 0 auto;
  height: calc(100% - env(safe-area-inset-bottom) - 108rpx * 2);
  overflow-y: auto;
}

.moreTitle>text {
  display: block;
  padding: 16rpx 0 0 22rpx;
}

.moreTitle>view {
  padding: 16rpx 32rpx 0 0;
}

.moreTitle>view>.icon-quxiao {
  font-size: 52rpx;
}

.moreTitle {
  display: flex;
  justify-content: space-between;
  width: 100%;
  /* padding: 20rpx; */
  font-size: 13px;
  font-weight: 500;
  color: #2E3033;
}

.headUserName {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin: 22rpx 0 22rpx 16rpx;
  border-radius: 50%;
  font-size: 10px;
  font-weight: 500;
  color: #FFFFFF;
  background-color: #FF9B50;
}

.msgUserName {
  display: block;
  margin-top: 20rpx;
  font-size: 10px;
  font-weight: 400;
  color: rgba(216, 216, 216, 0.9);
}

.sendUserName {
  color: #000000;
}

.msgContent {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;

}

.otherMsg,
.meSendMsg {
  display: flex;
}

.content {
  min-width: auto;
  max-width: 80%;
  height: auto;
}

.meSendMsg {
  align-items: center;
  justify-content: flex-end;
}

.meSendMsgContent {
  min-width: auto;
  max-width: 80%;
  height: auto;
  padding: 10rpx;
  color: #000000 !important;
  background-color: #F4F7FC;
}

.chatContent {
  /* display: flex; */
  max-width: 90%;
  min-width: auto;
  height: auto;
  padding: 10rpx;
  border-radius: 2px;
  color: #000000 !important;
  background-color: #F4F7FC;
}

.sendMsg {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 68rpx;
  padding: 20rpx 0 20rpx 0;
}

.sendMsg>input {
  width: 716rpx;
  height: 68rpx;
  border-radius: 4px;
  border: 1px solid #F2F2F2;
}

/* 选中大小 */
.activeScreen {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: bisque;
}

.live_push,
.live_pull {
  flex:1;
  width: 100%;
  height: 100%;
}

.sign-name {
  width: 100%;
  height: 100%;
}

.userNameBg {
  background-color: #3093F4 !important;
}

